{
  "openapi": "3.0.0",
  "paths": {
    "/": {
      "get": {
        "operationId": "AppController_getHello",
        "parameters": [],
        "responses": {
          "200": {
            "description": ""
          }
        },
        "tags": [
          "App"
        ]
      }
    },
    "/api/queryUserInfo": {
      "get": {
        "description": "根据ID或姓名查询用户信息",
        "operationId": "UserController_queryUserInfo",
        "parameters": [
          {
            "name": "id",
            "required": false,
            "in": "query",
            "description": "用户ID",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "name",
            "required": false,
            "in": "query",
            "description": "用户姓名",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功获取用户信息",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        },
        "summary": "查询用户信息",
        "tags": [
          "users"
        ]
      }
    },
    "/api/config": {
      "get": {
        "description": "根据用户ID获取用户的个性化配置",
        "operationId": "ConfigController_getConfig",
        "parameters": [
          {
            "name": "userId",
            "required": false,
            "in": "query",
            "description": "用户ID，如果不提供则返回所有用户配置",
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功获取用户配置",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UserConfig"
                  }
                }
              }
            }
          }
        },
        "summary": "获取用户配置",
        "tags": [
          "config"
        ]
      }
    },
    "/api/config/{userId}": {
      "put": {
        "description": "更新用户的个性化配置",
        "operationId": "ConfigController_updateConfig",
        "parameters": [
          {
            "name": "userId",
            "required": true,
            "in": "path",
            "description": "用户ID",
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功更新配置",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserConfig"
                }
              }
            }
          }
        },
        "summary": "更新用户配置",
        "tags": [
          "config"
        ]
      }
    }
  },
  "info": {
    "title": "Nest Demo API",
    "description": "Nest Demo 项目的 API 接口文档",
    "version": "1.0",
    "contact": {}
  },
  "tags": [
    {
      "name": "users",
      "description": "用户相关接口"
    },
    {
      "name": "config",
      "description": "配置相关接口"
    }
  ],
  "servers": [],
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "description": "用户ID",
            "example": 1
          },
          "name": {
            "type": "string",
            "description": "用户名",
            "example": "Zhang San"
          },
          "email": {
            "type": "string",
            "description": "用户邮箱",
            "example": "zhangsan@example.com"
          },
          "avatar": {
            "type": "string",
            "description": "头像URL",
            "example": "https://example.com/avatar1.jpg"
          }
        },
        "required": [
          "id",
          "name",
          "email"
        ]
      },
      "NotificationSettings": {
        "type": "object",
        "properties": {
          "email": {
            "type": "boolean",
            "description": "邮件通知是否开启",
            "example": true
          },
          "push": {
            "type": "boolean",
            "description": "推送通知是否开启",
            "example": true
          },
          "sms": {
            "type": "boolean",
            "description": "短信通知是否开启",
            "example": false
          }
        },
        "required": [
          "email",
          "push",
          "sms"
        ]
      },
      "Preferences": {
        "type": "object",
        "properties": {
          "nightMode": {
            "type": "boolean",
            "description": "是否启用夜间模式",
            "example": false
          },
          "fontSize": {
            "type": "string",
            "description": "字体大小",
            "enum": [
              "small",
              "medium",
              "large"
            ],
            "example": "medium"
          },
          "animations": {
            "type": "boolean",
            "description": "是否启用动画效果",
            "example": true
          },
          "timezone": {
            "type": "string",
            "description": "自定义时区",
            "example": "Asia/Shanghai"
          }
        },
        "required": [
          "nightMode",
          "fontSize",
          "animations",
          "timezone"
        ]
      },
      "UserConfig": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "number",
            "description": "用户ID",
            "example": 1
          },
          "theme": {
            "type": "string",
            "description": "主题设置",
            "enum": [
              "light",
              "dark"
            ],
            "example": "light"
          },
          "language": {
            "type": "string",
            "description": "语言设置",
            "example": "zh-CN"
          },
          "notifications": {
            "description": "通知设置",
            "allOf": [
              {
                "$ref": "#/components/schemas/NotificationSettings"
              }
            ]
          },
          "preferences": {
            "description": "个性化设置",
            "allOf": [
              {
                "$ref": "#/components/schemas/Preferences"
              }
            ]
          }
        },
        "required": [
          "userId",
          "theme",
          "language",
          "notifications",
          "preferences"
        ]
      }
    }
  }
}
